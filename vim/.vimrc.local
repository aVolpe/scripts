
fu! SumFunc() range
     let old = @a
     normal gv"ay
     let sel=@a
     let @a=old
     let t:r=0
     try
		exe 'let t:r = ' . join(split(sel,'\n'), '+')
		" call append(a:lastline, printf("Sum: %.02f", res))
     catch
              return -1
     endtry
     echo t:r 
     let @" = t:r
     return 0
endfu



